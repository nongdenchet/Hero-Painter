<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffd2d2d2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <apps.apidez.com.mycustomviewproject.PaintView
        android:id="@+id/paint_area"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/white"
        android:layout_above="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/control"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/undo"
            android:layout_margin="8dp"
            android:background="@drawable/button_un_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:text="@string/undo_string"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/redo"
            android:background="@drawable/button_un_active"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="16dp"
            android:text="@string/redo_string"
            android:textColor="@android:color/black"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>